---
interface Props{
    name: string;
    img1: string;
    img2: string;
    start: {
        hr: number,
        mn: number
    }
    invert: boolean;
}

const { name, img1, img2, start, invert } = Astro.props;
---

<div class="flex flex-col md:flex-row justify-between">
    <span class="inline md:hidden self-start">
        {start.hr} : {start.mn} ～
    </span>

    <div class="performer flex flex-col md:flex-row items-center gap-3">
        <div class="flex gap-3">
            <img class="profile-img" src={img1} alt=`${name}の画像`>
            <img class="profile-img" src={img2} alt=`${name}の画像`>
        </div>
        <h3 class="profile-name text-xl">{name}</h3>
    </div>

    <span class="hidden md:inline">
        {start.hr} : {start.mn} ～
    </span>
</div>

<style>
    .profile-img{
        width: 90px;
        height: auto;
    }

    .profile-name{
    }
</style>